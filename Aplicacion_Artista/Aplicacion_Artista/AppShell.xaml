<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="Aplicacion_Artista.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:Aplicacion_Artista"
    xmlns:pages="clr-namespace:Aplicacion_Artista.Pages"
    xmlns:sys="clr-namespace:System;assembly=netstandard"
    Shell.FlyoutBehavior="Flyout"
    Shell.TabBarBackgroundColor="Black"
    Title="Aplicacion_Artista">

    <Shell.FlyoutBackdrop>
        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#456163"
                      Offset="0.1" />
            <GradientStop Color="#283d4f"
                      Offset="0.6" />
            <GradientStop Color="#13114f"
                      Offset="1.0" />
        </LinearGradientBrush>

    </Shell.FlyoutBackdrop>

    <FlyoutItem Title="Home" >
        <ShellContent Title="Home"
                  ContentTemplate="{DataTemplate pages:MainPage}" />
    </FlyoutItem>
    
    <FlyoutItem Title="Biografia">
        <ShellContent Title="Biografia"
              ContentTemplate="{DataTemplate pages:Biografia}" />
    </FlyoutItem>

    <FlyoutItem Title="Discografía" >
        <ShellContent Title="Discografía"
                  ContentTemplate="{DataTemplate pages:Discografía}" />
    </FlyoutItem>

    <FlyoutItem Title="Eventos" >
        <ShellContent Title="Eventos"
              ContentTemplate="{DataTemplate pages:Eventos}" />
    </FlyoutItem>


</Shell>
