               TextColor="#00d2ff" 
               FontSize="18" 
               HorizontalOptions="Center" />
        </VerticalStackLayout>

        <BoxView HeightRequest="1" Color="#3b5266" Margin="0,10" />

        <Label Text="Detalle:" 
           TextColor="#00d2ff" 
           FontSize="18" 
           FontAttributes="Bold"/>

        <Label x:Name="descripcionLabel" 
           TextColor="#e0e0e0" 
           FontSize="16" 
           LineHeight="1.2" />

