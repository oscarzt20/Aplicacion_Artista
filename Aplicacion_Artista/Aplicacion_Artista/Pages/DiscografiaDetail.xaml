               Aspect="AspectFill" 
               HeightRequest="250" 
               WidthRequest="400" />
        </Border>

        <VerticalStackLayout Spacing="5">
            <Label x:Name="albumLabel" 
               TextColor="White" 
               FontSize="26" 
               FontAttributes="Bold" 
               HorizontalOptions="Center" 
               HorizontalTextAlignment="Center"/>

